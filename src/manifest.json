{
    "name": "OpenHUD",
    "version": "1.16",
    "description": "A free online poker assistant for amateur and professional poker players that wish to improve their game.",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["https://app.ggn.live/*/table/*", "https://*.ggpoker.network/*/table/*", "https://app.good-game-network.com/*/table/*"],
            "js": [
                "jquery-3.3.1.slim.min.js",
                "common.js",
                "ServicesManager.js",
                "Service.js",
                "openhud.ggnetwork.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": {
            "16": "images/icon16.png",
            "24": "images/icon24.png",
            "32": "images/icon32.png"
        },
        "default_title": "Open HUD",
        "default_popup": "toolbar.html"
    },
    "permissions": [
        "storage"
    ]
}
